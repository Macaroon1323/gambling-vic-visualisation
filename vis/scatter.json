{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": "EGM Density vs Expenditure per Adult by Victorian LGA (2015â€“2024)",
  "data": {
    "url": "Data/scatter.csv"
  },
  "params": [
    {
      "name": "YearSelect",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    { "calculate": "toNumber(datum.YEAR)", "as": "YearNum" },
    { "calculate": "toNumber(datum.EXPENDITURE_PER_ADULT)", "as": "Exp" },
    { "calculate": "toNumber(datum.EGM_DENSITY)", "as": "Density" },
    { "calculate": "toNumber(datum.SEIFA_SCORE)", "as": "SEIFA" },
    { "calculate": "toNumber(datum.UNEMPLOYMENT_RATE)", "as": "Unemp" },
    { "filter": "datum.YearNum == YearSelect" },
    { "filter": "datum.Exp > 0 && datum.Density > 0" }
  ],
  "mark": {
    "type": "circle",
    "opacity": 0.8,
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "encoding": {
    "x": {
      "field": "Density",
      "type": "quantitative",
      "title": "EGMs per 1,000 Adults",
      "scale": { "domain": [0, 10], "zero": false }
    },
    "y": {
      "field": "Exp",
      "type": "quantitative",
      "title": "Expenditure per Adult ($)",
      "scale": { "domain": [0, 1000], "zero": true }
    },
    "color": {
      "field": "SEIFA_SCORE",
      "type": "quantitative",
      "title": "SEIFA (Disadvantage Index)",
      "scale": {
        "domain": [850, 1150],  
        "scheme": "blues"
      }
    },
    "size": {
      "field": "UNEMPLOYMENT_RATE",
      "type": "quantitative",
      "title": "Unemployment Rate (%)",
      "scale": {
        "domain": [0, 0.12],  
        "range": [300, 2000],
        "type": "sqrt"
      }
    },
    "tooltip": [
      { "field": "LGA_NAME", "type": "nominal", "title": "Local Government Area" },
      { "field": "REGION", "type": "nominal" },
      { "field": "Exp", "type": "quantitative", "title": "Expenditure per Adult ($)", "format": ",.0f" },
      { "field": "Density", "type": "quantitative", "title": "EGMs per 1,000 Adults" },
      { "field": "SEIFA", "type": "quantitative", "title": "SEIFA Score" },
      { "field": "Unemp", "type": "quantitative", "title": "Unemployment (%)", "format": ".1%" }
    ]
  },
  "config": {
    "view": { "stroke": null },
    "axis": { "labelFont": "Oxygen", "titleFont": "Oxygen" },
    "legend": {"orient": "right", "labelFont": "Oxygen", "titleFont": "Oxygen" },
    "title": { "font": "Oxygen", "fontSize": 16, "fontWeight": 600 }
  }
}
