{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Electronic Gaming Machine Expenditure per Adult â€” Victoria, 2024",
  "width": "container",
  "height": 500,
  "projection": {
    "type": "conicEqualArea",
    "parallels": [-36, -38],
    "rotate": [-145, 0, 0]
  },
  "data": {
    "url": "Source_Data/VICLGAtopojson.json",
    "format": {
      "type": "topojson",
      "feature": "LGA"
    }
  },
  "encoding": {
    "tooltip": [
      {"field": "properties.LGA_NAME", "type": "nominal", "title": "Local Government Area"},
      {"field": "EXPENDITURE_PER_ADULT_2024", "type": "quantitative", "title": "Expenditure per Adult ($)", "format": ",.0f"},
      {"field": "EGM_DENSITY_2024", "type": "quantitative", "title": "EGMs per 1,000 Adults"},
      {"field": "SEIFA_SCORE", "type": "quantitative", "title": "SEIFA (Disadvantage Index)"},
      {"field": "POPULATION_2024", "type": "quantitative", "title": "Adult Population (2024)", "format": ","}
    ]
  },
  "layer": [
    {
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
    {
      "transform": [
        {
          "lookup": "properties.LGA_NAME",
          "from": {
            "data": {"url": "Data/choropleth.csv"},
            "key": "LGA_NAME",
            "fields": [
              "EXPENDITURE_PER_ADULT_2024",
              "EGM_DENSITY_2024",
              "SEIFA_SCORE",
              "POPULATION_2024"
            ]
          }
        }
      ],
      "mark": "geoshape",
      "encoding": {
        "color": {
          "field": "EXPENDITURE_PER_ADULT_2024",
          "type": "quantitative",
          "title": "Expenditure per Adult ($)",
          "scale": {"scheme": "blues"}
        }
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {"labelFont": "Oxygen", "titleFont": "Oxygen"},
    "legend": {"labelFont": "Oxygen", "titleFont": "Oxygen"},
    "header": {"labelFont": "Oxygen", "titleFont": "Oxygen"},
    "title": {"font": "Oxygen", "fontSize": 16, "fontWeight": 600}
  }
}
